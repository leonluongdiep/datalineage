WITH Startpunkte AS (
    SELECT DISTINCT quelle_object_id AS potenzieller_startknoten
    FROM pd_mapping
    WHERE quelle_object_id NOT IN (SELECT zield_object_id FROM pd_mapping)
)

SELECT 
    HIERARCHY_SOURCE,
    PATH_STRING AS HIERARCHY_PATH,
    HIERARCHY_LEVEL AS Depth, 
    HIERARCHY_ORDER
FROM 
    Startpunkte,
    HIERARCHY (
        SOURCE "quelle_object_id",
        TARGET "zield_object_id",
        CHILD TO PARENT CONNECT BY,
        ROOT WHERE "quelle_object_id" = Startpunkte.potenzieller_startknoten,
        LEVEL AS HIERARCHY_LEVEL,
        ORDER AS HIERARCHY_ORDER,
        PATH AS PATH_STRING
    ) 
    ON pd_mapping 
    AS pd_mapping_HIERARCHY (HIERARCHY_SOURCE, PATH_STRING, HIERARCHY_LEVEL, HIERARCHY_ORDER);

