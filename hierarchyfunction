SELECT
    HIERARCHY_SOURCE,
    HIERARCHY_PATH,
    HIERARCHY_LEVEL,
    HIERARCHY_ORDER,
    HIERARCHY_DEPTH,
    HIERARCHY_RANK,
    PATH_STRING
FROM 
    HIERARCHY (
        SOURCE SOURCE_COLUMN "Source",
        TARGET SOURCE_COLUMN "Target",
        CHILD TO PARENT CONNECT BY,
        ROOT WHERE "Source" = 'A'
        HIERARCHY_PATH INTO PATH_STRING,
        LEVEL,
        HIERARCHY_ORDER,
        HIERARCHY_DEPTH,
        HIERARCHY_RANK
